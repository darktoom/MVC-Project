@model Company.Data.Entities.Department
@{
    ViewData["Title"] = "Create";

}

<h1>Create New Department</h1>



<form asp-controller="Department" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>


    <div class="form-group">
        <label class="form-label" asp-for="CeateAt"></label>
        <input type ="date" class="form-control" asp-for="CeateAt"/>
        <span class="text-danger" asp-validation-for="CeateAt"></span>
    </div>

    <div class="mt-3">
        <input  type="submit" value="Create" class="btn btn-primary me-2">
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>


</form>
